@page "/counter"

<PageTitle>Counter</PageTitle>

<MudContainer Fixed="true">
    <MudBreadcrumbs Items="@_breadcrumbItems"></MudBreadcrumbs>
    
    <MudCard>
        <MudCardContent>
            <MudText>Counter</MudText>
            <MudText Typo="Typo.body2">Current count: @currentCount</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@IncrementCount">Click me</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    
    private readonly List<BreadcrumbItem> _breadcrumbItems = new()
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("Counter", href: null, disabled: true)
    };
}
