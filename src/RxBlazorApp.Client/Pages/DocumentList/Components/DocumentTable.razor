<MudTable Outlined="true" Items="@_documents" Hover="true">
    <HeaderContent>
        <MudTh>Document ID</MudTh>
        <MudTh>Number</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Date</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Date">@context.DocumentId</MudTd>
        <MudTd DataLabel="TemperatureC">@context.Number</MudTd>
        <MudTd DataLabel="TemperatureF">@context.Name</MudTd>
        <MudTd DataLabel="Summary">@context.CreationDate.ToString("dd.MM.yyyy")</MudTd>
    </RowTemplate>
</MudTable>
